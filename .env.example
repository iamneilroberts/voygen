# Voygen Environment Configuration
# Copy this file to .env and fill in your API keys

# LibreChat Configuration
HOST=localhost
PORT=3080
MONGODB_URI=mongodb://127.0.0.1:27017/voygen

# AI Model API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Session Management
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Web Search (Optional)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_API_URL=https://api.firecrawl.dev

# Chrome Browser Path (for mcp-chrome)
CHROME_PATH=/usr/bin/google-chrome

# Deployment URLs (for reference)
D1_DATABASE_URL=https://d1-database-improved.somotravel.workers.dev/sse
PROMPT_INSTRUCTIONS_URL=https://prompt-instructions-d1-mcp.somotravel.workers.dev/sse
GITHUB_MCP_URL=https://github-mcp-cta.somotravel.workers.dev/sse